{
    "compileOnSave": false,
    "compilerOptions": {
     "sourceMap": true,
     "module": "esnext",
     "declaration": false,
     "allowSyntheticDefaultImports": true,
     "moduleResolution": "node",
     "resolveJsonModule": true,
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "esModuleInterop": true,
     "target": "es6",
     "allowJs": true,
     "outDir": "dist",
     "typeRoots": ["node_modules/@types", "index.d.ts"],
     "lib": ["es2019", "dom"],
     "types": ["./types"],
     "baseUrl": "./src",
     "paths": {
      "@shared/*": ["app/shared/*"],
      "@introspection/*": ["app/@introspection/*"],
      "@core/*": ["app/core/*"],
      "~/*": ["app/*"]
     }
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
   }
   